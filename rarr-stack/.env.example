# === USER/ACCESS ===
PUID=1000                 # User ID for container permissions
PGID=1000                 # Group ID for container permissions
TZ=America/New_York       # Timezone

# === VPN (Transmission/OpenVPN) ===
VPN_ENABLED=true
VPN_TYPE=openvpn
VPN_USER=your_nordvpn_username
VPN_PASS=your_nordvpn_password
VPN_COUNTRY=us
VPN_CITY=any
VPN_PROTOCOL=udp

# === WEB UI PORTS ===
TRANSMISSION_PORT=9091
RADARR_PORT=7878
SONARR_PORT=8989
LIDARR_PORT=8686
READARR_PORT=8787
PROWLARR_PORT=9696

# === DOWNLOAD PATHS ===
DATA_DIR=/mnt/data                # Mount path in VM
DOWNLOADS_DIR=/mnt/data/downloads
MOVIES_DIR=/mnt/data/movies
SHOWS_DIR=/mnt/data/shows
MUSIC_DIR=/mnt/data/music
BOOKS_DIR=/mnt/data/books

# === NGINX PROXY MANAGER (Optional) ===
DOMAIN_SUFFIX=duckdns.org
EMAIL=you@example.com            # Email for Let's Encrypt certs
